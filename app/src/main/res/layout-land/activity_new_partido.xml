<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
android:gravity="center">
    <TextView
            android:layout_margin="5sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Iniciar Nuevo Partido"
            android:textSize="25sp"/>

    <LinearLayout
            android:layout_margin="5sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Equipo A:  "/>
        <EditText
                android:id="@+id/et_equipo_A"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:hint="Nombre de Equipo A"/>
    </LinearLayout>
    <LinearLayout
            android:layout_margin="5sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Equipo B:  "/>
        <EditText
                android:id="@+id/et_equipo_B"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:hint="Nombre de Equipo B"/>
    </LinearLayout>




    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:layout_width="0sp" android:layout_weight="2" android:layout_height="wrap_content">

            <LinearLayout
                    android:padding="25sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dia:"/>
                <EditText
                        android:id="@+id/et_fecha_dia"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:hint="Dia"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mes:"/>
                <EditText
                        android:id="@+id/et_fecha_mes"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:hint="Mes"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Año:"/>
                <EditText
                        android:id="@+id/et_fecha_año"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:hint="Año"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout android:layout_width="0sp" android:layout_weight="1" android:layout_height="wrap_content">
            <LinearLayout
                    android:padding="25sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <EditText
                        android:id="@+id/et_fecha_hora"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:hint="Hora"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Minutos:"/>
                <EditText
                        android:id="@+id/et_fecha_minutos"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:hint="Minuto"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>







    <Button
            android:layout_margin="25sp"
            android:id="@+id/bt_iniciar_partido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Iniciar Partido"/>

</LinearLayout>